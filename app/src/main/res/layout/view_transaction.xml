<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/free_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colorWhite"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/main_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_image_image_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/image_dummy" />


        <com.pernia.ui.views.customtextview.RegularTextView
            android:id="@+id/product_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/product_image_image_view"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Pot making and design"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_small" />


        <com.pernia.ui.views.customtextview.RegularTextView
            android:id="@+id/product_by_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_text_view"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/product_image_image_view"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Transaction Amount:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_small" />

        <com.pernia.ui.views.customtextview.RegularTextView
            android:id="@+id/price_by_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_text_view"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/product_by_text_view"
            android:maxLines="1"
            android:singleLine="true"
            android:text="1000"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_small" />


        <com.pernia.ui.views.customtextview.LightTextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_by_text_view"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/product_image_image_view"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Date: 15 march 2017"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_extra_small" />


        <com.pernia.ui.views.customtextview.LightTextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/product_by_text_view"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Quantity: 1"

            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_extra_small" />
    </RelativeLayout>
</android.support.v7.widget.CardView>