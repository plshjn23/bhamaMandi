<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/free_card"
    android:layout_margin="4dp"
    android:background="@color/colorWhite"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/main_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_image_image_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/image_dummy" />


        <RelativeLayout
            android:id="@+id/product_name_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_image_view">

            <com.pernia.ui.views.customtextview.RegularTextView
                android:id="@+id/product_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Pot making and design"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_small" />

            <com.pernia.ui.views.customtextview.RegularTextView
                android:id="@+id/product_by_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="miss Ritu Mehta"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_small" />


        </RelativeLayout>


        <com.pernia.ui.views.customtextview.RegularTextView
            android:id="@+id/discription_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_relative_layout"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:maxLines="5"
            android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution "
            android:textSize="@dimen/text_size_extra_small" />


        <com.pernia.ui.views.customtextview.RegularTextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discription_text_view"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="6-8 weeks(5-8 hours per week)"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>
</android.support.v7.widget.CardView>